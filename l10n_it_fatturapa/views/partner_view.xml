<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_partner_form_fatturapa">
            <field name="name">partner.form.fatturapa</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
            <notebook position="inside">
	            <page name="fatturapa" string="Fattura Elettronica" groups="account.group_account_invoice">
	                <group name="fatturapa_group">
	                    <field name="electronic_invoice_subjected"/>
	                    <group attrs="{'invisible': [('electronic_invoice_subjected', '=', False)]}">
	                        <field name="ipa_code" placeholder="IPA123"/>
	                        <field name="codice_destinatario"/>
	                        <field name="pec_destinatario"
	                               attrs="{'invisible': [('codice_destinatario', '!=', '0000000')]}"/>
	                        <field name="eori_code"/>
	                        <field name="license_number"/>
	                    </group>
	                </group>
	            </page>
            </notebook>
                
            </field>
        </record>
		<record model="ir.ui.view" id="view_partner_form_fatturapa_country">
            <field name="name">partner.form.fatturapa.country</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
				<field name="country_id" position="attributes">
					<attribute name="on_change">onchange_country_id_e_inv(country_id, codice_destinatario)</attribute>
				</field>
			</field>
		</record>

    </data>
</openerp>
