<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.normal.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="account.product_normal_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//page/group[@name='properties']/group/field[@name='supplier_taxes_id']/.." position="after">
                    <group string="Account stamp">
                        <field name="is_stamp"/>
                        <field name="stamp_apply_min_total_base" attrs="{'invisible': [('is_stamp', '=', False)], 'required': [('is_stamp', '=', True)]}"/>
                        <field name="stamp_apply_tax_code_ids" attrs="{'invisible': [('is_stamp', '=', False)]}"/>
                    </group>
                </xpath>

                <xpath expr="//page/group[@name='properties']/group/field[@name='property_account_income']" position="attributes">
                    <attribute name="attrs">{'required': [('is_stamp', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//page/group[@name='properties']/group/field[@name='property_account_expense']" position="attributes">
                    <attribute name="attrs">{'required': [('is_stamp', '=', True)]}</attribute>
                </xpath>

            </field>
        </record>

    </data>
</openerp>