<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Tree: Account stamp -->
        <record model="ir.ui.view" id="account_stamp_tree">
            <field name="name">account.stamp.tree</field>
            <field name="model">account.stamp</field>
            <field name="arch" type="xml">
                <tree string="Account stamp Tree" editable="bottom">
                    <field name="product_id" domain="[('is_stamp', '=', True)]"/>
                    <field name="serial"/>
                    <field name="emission_date"/>
                    <field name="use_invoice_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Search: Account stamp -->
        <record model="ir.ui.view" id="account_stamp_search">
            <field name="name">account.stamp.search</field>
            <field name="model">account.stamp</field>
            <field name="arch" type="xml">
                <search string="Account stamp Search View">
                    <field name="product_id"/>
                    <field name="serial"/>
                    <field name="use_invoice_id"/>
                    <filter name="is_available" string="Available" domain="[('state', '=', 'available')]"/>
                    <filter name="is_used" string="Used" domain="[('state', '=', 'used')]"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Product" domain="[]" context="{'group_by':'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action: Account stamp -->
        <record model="ir.actions.act_window" id="action_account_stamp">
            <field name="name">Account stamps</field>
            <field name="res_model">account.stamp</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="account_stamp_search"/>
            <field name="context">{'search_default_is_available': True}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new account stamp.
                </p>
            </field>
        </record>



    </data>
</openerp>