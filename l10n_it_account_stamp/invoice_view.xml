<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Tree: Invoice Customer -->
        <record id="invoice_tree" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="vat" invisible="1"/>
                    <field name="fiscal_code" invisible="1"/>
                </field>
            </field>
        </record>

        <!-- Form: Invoice Customer -->
        <record id="invoice_form_view" model="ir.ui.view">
            <field name="name">account.invoice.form.profile</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="techplus_base.account_invoice_with_default_analytic_account_form"/>
            <field name="arch" type="xml">

                <field name="amount_total" position="after">
                    <field name="letter_of_intent_amount_residual" attrs="{'invisible': ['|', ('letter_of_intent_id', '=', False), ('letter_of_intent_amount_residual', '&lt;', 0)]}" string="Intent residual"/>
                    <field name="letter_of_intent_amount_exceeded" style="color: red;" attrs="{'invisible': ['|', ('letter_of_intent_id', '=', False), ('letter_of_intent_amount_residual', '&gt;=', 0)]}" string="Intent residual"/>
                </field>

                <field name="fiscal_position" position="attributes">
                    <attribute name="on_change">on_change_fiscal_position(fiscal_position, type, partner_id, letter_of_intent_id, date_invoice, amount_untaxed, period_id, context)</attribute>
                    <attribute name="required">1</attribute>
                </field>

                <field name="amount_untaxed" position="attributes">
                    <attribute name="on_change">on_change_fiscal_position(fiscal_position, type, partner_id, letter_of_intent_id, date_invoice, amount_untaxed, period_id, context)</attribute>
                </field>

                <field name="date_invoice" position="attributes">
                    <attribute name="on_change">on_change_fiscal_position(fiscal_position, type, partner_id, letter_of_intent_id, date_invoice, amount_untaxed, period_id, context)</attribute>
                </field>

                <!-- <xpath expr="//group/group/field[@name='journal_id']" position="attributes">
                    <attribute name="domain">[('company_id', '=', company_id)]</attribute>
                </xpath> -->

                <xpath expr="//page/field[@name='payment_ids']" position="before">
                    <button name="go_to_payments" states="open,paid" string="View Payment Vouchers" type="object"/>
                </xpath>

                <field name="amount_tax" position="after">
                    <field name="amount_sp" widget="monetary"
                        options="{'currency_field': 'currency_id'}"
                        attrs="{'invisible': [('split_payment', '=', False)]}"/>
                </field>

                <field name="partner_bank_id" position="after">
                    <field name="bank_account_ids" widget="many2one"/>
                </field>
                <field name="date_invoice" position="after">
                    <field name="registration_date" groups="base.group_system,base.group_erp_manager,account.group_account_manager"/>
                </field>

                <label for="comment" position="before">
                    <group>
                        <field name="split_payment" on_change="on_change_split_payment_flag(split_payment, partner_id, context)"/>
                        <field name="split_payment_text" attrs="{'invisible': [('split_payment', '=', False)]}"/>
                        <field name="letter_of_intent_id" domain="[('type', '=', 'in'), ('partner_id', '=', partner_id)]"/>
                    </group>
                </label>

                <xpath expr="//sheet/h1[1]" position="before">
                    <div class="oe_right oe_button_box">
                        <button name="switch_taxes_and_accounts" states="draft" string="Switch Taxes and Accounts" type="object" class="oe_edit_only"/>
                    </div>
                </xpath>

            </field>
        </record>

        <!-- Form: Invoice Supplier -->
        <record id="invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.reg_date</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">

                <field name="amount_total" position="after">
                    <field name="letter_of_intent_amount_residual" attrs="{'invisible': ['|', ('letter_of_intent_id', '=', False), ('letter_of_intent_amount_residual', '&lt;', 0)]}" string="Intent residual"/>
                    <field name="letter_of_intent_amount_exceeded" style="color: red;" attrs="{'invisible': ['|', ('letter_of_intent_id', '=', False), ('letter_of_intent_amount_residual', '&gt;=', 0)]}" string="Intent residual"/>
                </field>

                <field name="fiscal_position" position="attributes">
                    <attribute name="on_change">on_change_fiscal_position(fiscal_position, type, partner_id, letter_of_intent_id, date_invoice, amount_untaxed, period_id, context)</attribute>
                    <attribute name="required">1</attribute>
                </field>

                <field name="amount_untaxed" position="attributes">
                    <attribute name="on_change">on_change_fiscal_position(fiscal_position, type, partner_id, letter_of_intent_id, date_invoice, amount_untaxed, period_id, context)</attribute>
                </field>

                <field name="date_invoice" position="attributes">
                    <attribute name="on_change">on_change_fiscal_position(fiscal_position, type, partner_id, letter_of_intent_id, date_invoice, amount_untaxed, period_id, context)</attribute>
                </field>

                <label for="comment" position="before">
                    <group>
                        <field name="letter_of_intent_id" domain="[('type', '=', 'out'), ('partner_id', '=', partner_id)]"/>
                    </group>
                </label>

                <xpath expr="//page/field[@name='payment_ids']" position="before">
                    <button name="go_to_payments" states="open,paid" string="View Payment Vouchers" type="object"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1, 'show_address': 1}</attribute>
                    <attribute name="options">{"always_reload": True, "highlight_first_line": True}</attribute>
                </xpath>

                <field name="date_invoice" position="after">
                    <field name="registration_date"/>
                </field>

                <xpath expr="//sheet/div/h1[1]/.." position="before">
                    <div class="oe_right oe_button_box">
                        <button name="switch_taxes_and_accounts" states="draft" string="Switch Taxes and Accounts" type="object" class="oe_edit_only"/>
                    </div>
                </xpath>

            </field>
        </record>

        <!-- Search: Invoice  Customer -->
        <record id="view_account_invoice_filter" model="ir.ui.view">
            <field name="name">account.invoice.select</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <field name="number" position="after">
                    <field name="vat"/>
                    <field name="fiscal_code"/>
                    <!-- <separator/>
                    <field name="date_invoice" string="Invoice date from" domain="[('date_invoice', '&gt;=', self)]"/>
                    <separator/>
                    <field name="date_invoice_search" string="Invoice date to" domain="[('date_invoice', '&lt;=', self)]"/> -->
                </field>
                <filter name="unpaid" position="after">
                    <separator/>
                    <filter string="UE Invoices"
                        name="ue_invoices"
                        domain="[('partner_id.country_id.is_UE', '=', True)]"
                        context="{}"
                        help="Invoices issued for UE partners" />
                    <separator/>
                    <filter string="VAT partners"
                        name="vat_partners"
                        domain="[('partner_id.vat', '!=', False)]"
                        context="{}"
                        help="Invoices issued for partners with VAT" />
                    <filter string="No VAT partners"
                        name="no_vat_partners"
                        domain="[('partner_id.vat', '=', False)]"
                        context="{}"
                        help="Invoices issued for partners with no VAT" />
                    <separator/>
                    <filter string="No country partners"
                        name="no_vat_partners"
                        domain="[('partner_id.country_id', '=', False)]"
                        context="{}"
                        help="Invoices issued for partners with no country" />
                </filter>
            </field>
        </record>

    </data>
</openerp>
