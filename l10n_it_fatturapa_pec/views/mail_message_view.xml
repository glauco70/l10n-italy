<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_message_form" model="ir.ui.view">
            <field name="name">view_message_form</field>
            <field name="model">mail.message</field>
            <field name="inherit_id" ref="mail.view_message_form"/>
            <field name="arch" type="xml">
                <field name="body" position="before">
                    <field name="attachment_ids" readonly="1">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="datas"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>

    </data>
</openerp>